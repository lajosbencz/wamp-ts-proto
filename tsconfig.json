{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true
  },
  "include": ["./lib/**/*.ts"],
  "exclude": ["**/*.spec.ts", "**/*.test.ts", "./node_modules", "./dist"]
}
